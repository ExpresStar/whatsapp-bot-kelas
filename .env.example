# ============================================
# KONFIGURASI WHATSAPP BOT KELAS
# ============================================

# Mode Database: 'json' atau 'mongodb'
DB_MODE=json

# MongoDB URI (jika menggunakan MongoDB)
# Contoh: mongodb+srv://username:password@cluster.mongodb.net/bot_kelas
MONGODB_URI=

# OpenAI/Gemini API Key untuk fitur AI
# Dapatkan di: https://platform.openai.com atau https://makersuite.google.com
OPENAI_API_KEY=your_openai_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# OpenWeatherMap API Key untuk fitur cuaca
# Dapatkan di: https://openweathermap.org/api
WEATHER_API_KEY=your_openweather_api_key_here

# Konfigurasi Bot
BOT_NAME="Bot Kelas SMA"
TIMEZONE=Asia/Jakarta
PREFIX=!.
COOLDOWN_SECONDS=3

# Admin Numbers (pisahkan dengan koma, format: 6281234567890)
ADMIN_NUMBERS=6281234567890,6289876543210

# Group ID yang diizinkan (kosongkan untuk mengizinkan semua grup)
# Format: 1234567890@g.us
ALLOWED_GROUPS=

# Auto Reminder (dalam menit)
REMINDER_CHECK_INTERVAL=60

# Logging
LOG_LEVEL=info
LOG_TO_FILE=true
